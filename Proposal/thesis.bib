	journal = {The Astrophysical Journal},
	author = {Grasha, K. and Chen 陈, Q. H. 千惠 and Battisti, A. J. and Acharyya, A. and Ridolfo, S. and Poehler, E. and Mably, S. and Verma, A. A. and Hayward, K. L. and Kharbanda, A. and Poetrodjojo, H. and Seibert, M. and Rich, J. A. and Madore, B. F. and Kewley, L. J.},
