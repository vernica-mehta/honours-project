	journal = {Astronomy \& Astrophysics},
	author = {Leitinger, E. I. and Baumgardt, H. and Cabrera-Ziri, I. and Hilker, M. and Carbajo-Hijarrubia, J. and Gieles, M. and Husser, T. O. and Kamann, S.},
